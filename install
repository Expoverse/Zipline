version='0.0.1'
platform='linux'
user=$(whoami)
curl -Lo zipline.tar.gz https://github.com/Expoverse/Zipline/releases/download/$version/zipline-linux-amd64.tar.gz
mkdir -p /home/$user/.zipline
tar zxf zipline.tar.gz -C /home/$user/.zipline && sudo mv /home/$user/.zipline/zipline /usr/local/bin/zipline && rm zipline.tar.gz